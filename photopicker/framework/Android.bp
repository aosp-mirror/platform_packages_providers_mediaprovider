package {
    // See: http://go/android-license-faq
    default_applicable_licenses: ["Android-Apache-2.0"],
}

java_sdk_library {
    name: "framework-photopicker",
    defaults: ["framework-module-defaults"],
    srcs: [
        ":framework-photopicker-updatable-sources",
    ],
    permitted_packages: [
        "android.widget.photopicker",
    ],
    apex_available: [
        "com.android.mediaprovider",
    ],
    impl_library_visibility: [
        "//packages/providers/MediaProvider:__subpackages__",
    ],
    min_sdk_version: "31", // new jars are only supported S+
}

filegroup {
    name: "framework-photopicker-updatable-sources",
    defaults: ["framework-sources-module-defaults"],
    srcs: [
        "java/**/*.java",
    ],
    path: "java",
}
